{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Advanced IT",
    "version": "1.0.0",
    "identifier": "com.advancedit.viewer",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:5556",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "Advanced IT",
                "width": 400,
                "height": 520,
                "resizable": false,
                "center": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.ico",
            "icons/icon.png",
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png"
        ]
    }
}