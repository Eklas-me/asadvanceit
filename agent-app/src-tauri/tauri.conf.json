{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Advanced IT Agent",
    "version": "1.0.0",
    "identifier": "com.advancedit.agent",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:5184",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Advanced IT Agent",
                "width": 400,
                "height": 520,
                "resizable": false,
                "center": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all"
    }
}